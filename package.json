  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jiangtao/hexui/issues"
  },
  "dependencies": {
    "async-validator": "^1.6.7",
    "core-js": "^2.4.1",
    "deepmerge": "^1.3.1",
    "popper.js": "^0.6.4",
    "vue": "1.x"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel": "^6.3.13",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
